{
  "name": "primo-explore-bu",
  "description": "assorted customizations to Ex Libris Primo New UI created, consumed, and maintained by BU Libraries.",
  "private": false,
  "repository": {
    "type": "git",
    "url": "git+https://github.com/bulib/primo-explore-bu.git"
  },
  "keywords": [
    "primo",
    "primo-explore",
    "bulib",
    "code4lib"
  ],
  "devDependencies": {
    "cypress": "^3.3.1",
    "lerna": "^3.15.0"
  },
  "scripts": {
    "clean:build": "rm -rf _build || true;",
    "clean:view": "rm -rf _build/primo-explore/custom/VIEW || true;",
    "reset": "npm run clean:build && scripts/initialize_build.sh",
    "prep": "npm run clean:view && scripts/prepare_view.sh",
    "start": "cd _build/primo-explore/custom/VIEW && gulp run --view=VIEW --browserify",
    "restart": "npm run prep && npm run start",
    "cy:verify": "cypress verify",
    "cy:run": "cypress run --port 8003",
    "test": "npm run restart && npm run cy:run",
    "test:open": "npm run restart && cypress open --port 8003",
    "all": "npm run reset && npm run test"
  },
  "author": "@bulib",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/bulib/primo-explore-bu/issues"
  },
  "homepage": "https://github.com/bulib/primo-explore-bu#readme"
}
