{
  "name": "primo-explore-bu",
  "description": "assorted customizations to Ex Libris Primo New UI created, consumed, and maintained by BU Libraries.",
  "private": false,
  "repository": {
    "type": "git",
    "url": "git+https://github.com/bulib/primo-explore-bu.git"
  },
  "keywords": [
    "primo",
    "primo-explore",
    "bulib",
    "code4lib"
  ],
  "devDependencies": {
    "cypress": "^3.3.1",
    "gulp": "^4.0.2",
    "primo-explore-devenv": "^1.0.5"
  },
  "scripts": {
    "init": "./scripts/initialize_build.sh",
    "clean:build": "rm -rf /tmp/devenv || true;",
    "clean:view": "rm -rf /tmp/devenv/primo-explore/ || true;",
    "reset": "npm run clean:build && npm run init",
    "prep": "npm run clean:view && scripts/prepare_views.sh",
    "start": "./scripts/start_view.sh",
    "restart": "npm run prep && npm run start",
    "cy:verify": "cypress verify",
    "cy:run": "cypress run --browser chrome",
    "test": "npm run restart && npm run cy:run",
    "test:open": "npm run restart && cypress open",
    "all": "npm run reset && npm run test"
  },
  "author": "@bulib",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/bulib/primo-explore-bu/issues"
  },
  "homepage": "https://github.com/bulib/primo-explore-bu#readme"
}
